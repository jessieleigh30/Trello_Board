<div class="row">
<div class="col s12 m6">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title"><%= @board.name %></span>
        <ul>
            <% @lists.each do |list| %>
                <li>
                    <%= link_to list.name, board_list_path(@board, list) %>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="card-action">
      <a href="#"><%= link_to 'Delete this Board', @board, method: :delete %></a>
      <a href="#"><%= link_to "Add a List", new_board_list_path(@board) %></a>
    </div>
  </div>
</div>
</div>